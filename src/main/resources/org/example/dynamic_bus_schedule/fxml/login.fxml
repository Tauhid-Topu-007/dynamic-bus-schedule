<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>

<ScrollPane fx:id="mainScrollPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.dynamic_bus_schedule.controller.LoginController"
            fitToWidth="true" fitToHeight="true"
            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
            style="-fx-background: transparent; -fx-border-color: transparent;">

    <content>
        <StackPane fx:id="mainPane">
            <children>
                <HBox spacing="0" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2);"
                      minHeight="700" minWidth="1000">
                    <children>
                        <!-- Left Side - Welcome Section -->
                        <VBox alignment="CENTER" prefWidth="450" style="-fx-background-color: rgba(255,255,255,0.1);"
                              minHeight="700">
                            <children>
                                <VBox alignment="CENTER" spacing="20">
                                    <children>
                                        <Label text="ðŸšŒ Bus Schedule System"
                                               style="-fx-text-fill: white; -fx-font-size: 32; -fx-font-weight: bold;">
                                            <font>
                                                <Font name="System Bold" size="32.0" />
                                            </font>
                                        </Label>
                                        <Label text="Efficient Bus Management Platform"
                                               style="-fx-text-fill: white; -fx-font-size: 16; -fx-opacity: 0.9;" />

                                        <!-- Feature List -->
                                        <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20;">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <Label text="âœ“" style="-fx-text-fill: #4CAF50; -fx-font-size: 16; -fx-font-weight: bold;" />
                                                    <Label text="Real-time Schedule Management" style="-fx-text-fill: white; -fx-font-size: 14;" />
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <Label text="âœ“" style="-fx-text-fill: #4CAF50; -fx-font-size: 16; -fx-font-weight: bold;" />
                                                    <Label text="Smart Bus Tracking" style="-fx-text-fill: white; -fx-font-size: 14;" />
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <Label text="âœ“" style="-fx-text-fill: #4CAF50; -fx-font-size: 16; -fx-font-weight: bold;" />
                                                    <Label text="Multi-role Access Control" style="-fx-text-fill: white; -fx-font-size: 14;" />
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <Label text="âœ“" style="-fx-text-fill: #4CAF50; -fx-font-size: 16; -fx-font-weight: bold;" />
                                                    <Label text="Automated Reporting" style="-fx-text-fill: white; -fx-font-size: 14;" />
                                                </HBox>
                                            </children>
                                        </VBox>

                                        <!-- Statistics -->
                                        <HBox alignment="CENTER" spacing="30" style="-fx-padding: 20;">
                                            <children>
                                                <VBox alignment="CENTER" spacing="5">
                                                    <Label text="50+" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
                                                    <Label text="Buses" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12;" />
                                                </VBox>
                                                <VBox alignment="CENTER" spacing="5">
                                                    <Label text="100+" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
                                                    <Label text="Routes" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12;" />
                                                </VBox>
                                                <VBox alignment="CENTER" spacing="5">
                                                    <Label text="24/7" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
                                                    <Label text="Support" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12;" />
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                            </padding>
                        </VBox>

                        <!-- Right Side - Login/Register Forms -->
                        <StackPane prefWidth="550" minHeight="700">
                            <children>
                                <!-- Login Form -->
                                <StackPane fx:id="loginContainer">
                                    <VBox alignment="CENTER" spacing="25" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 50; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 20, 0, 0, 5);"
                                          minHeight="600" minWidth="500">
                                        <children>
                                            <VBox alignment="CENTER" spacing="10">
                                                <Label text="Welcome Back" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                                <Label text="Sign in to your account" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;" />
                                            </VBox>

                                            <VBox spacing="15" style="-fx-pref-width: 350;">
                                                <VBox spacing="8">
                                                    <Label text="Email Address" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                                    <TextField fx:id="loginEmail" promptText="Enter your email"
                                                               style="-fx-pref-height: 45; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-padding: 0 15;" />
                                                </VBox>

                                                <VBox spacing="8">
                                                    <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                                    <PasswordField fx:id="loginPassword" promptText="Enter your password"
                                                                   style="-fx-pref-height: 45; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-padding: 0 15;" />
                                                </VBox>
                                            </VBox>

                                            <Button fx:id="loginButton" text="Sign In" defaultButton="true"
                                                    style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 350; -fx-pref-height: 50; -fx-background-radius: 8; -fx-font-size: 14;" />

                                            <HBox alignment="CENTER" spacing="5">
                                                <Label text="Don't have an account?" style="-fx-text-fill: #7f8c8d;" />
                                                <Hyperlink fx:id="showRegisterLink" text="Create Account"
                                                           style="-fx-text-fill: #667eea; -fx-font-weight: bold; -fx-border-color: transparent; -fx-padding: 0;" />
                                            </HBox>

                                            <Label fx:id="loginErrorLabel" style="-fx-text-fill: #e74c3c; -fx-wrap-text: true; -fx-max-width: 350; -fx-font-weight: bold; -fx-alignment: center;"
                                                   visible="false" />
                                        </children>
                                    </VBox>
                                </StackPane>

                                <!-- Register Form -->
                                <StackPane fx:id="registerContainer" visible="false">
                                    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 20, 0, 0, 5);"
                                          minHeight="650" minWidth="500">
                                        <children>
                                            <VBox alignment="CENTER" spacing="10">
                                                <Label text="Create Account" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                                <Label text="Join our platform today" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;" />
                                            </VBox>

                                            <VBox spacing="12" style="-fx-pref-width: 350;">
                                                <VBox spacing="6">
                                                    <Label text="Full Name" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                                    <TextField fx:id="registerName" promptText="Enter your full name"
                                                               style="-fx-pref-height: 40; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ddd; -fx-padding: 0 12;" />
                                                </VBox>

                                                <VBox spacing="6">
                                                    <Label text="Email Address" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                                    <TextField fx:id="registerEmail" promptText="Enter your email"
                                                               style="-fx-pref-height: 40; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ddd; -fx-padding: 0 12;" />
                                                </VBox>

                                                <VBox spacing="6">
                                                    <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                                    <PasswordField fx:id="registerPassword" promptText="Enter your password"
                                                                   style="-fx-pref-height: 40; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ddd; -fx-padding: 0 12;" />
                                                </VBox>

                                                <VBox spacing="6">
                                                    <Label text="Phone Number" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                                    <TextField fx:id="registerPhone" promptText="Enter your phone number"
                                                               style="-fx-pref-height: 40; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ddd; -fx-padding: 0 12;" />
                                                </VBox>

                                                <VBox spacing="6">
                                                    <Label text="Account Type" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                                    <ComboBox fx:id="registerRole" prefWidth="350"
                                                              style="-fx-pref-height: 40; -fx-background-radius: 6; -fx-border-radius: 6;" />
                                                </VBox>
                                            </VBox>

                                            <Button fx:id="registerButton" text="Create Account" defaultButton="true"
                                                    style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 350; -fx-pref-height: 50; -fx-background-radius: 8; -fx-font-size: 14;" />

                                            <HBox alignment="CENTER" spacing="5">
                                                <Label text="Already have an account?" style="-fx-text-fill: #7f8c8d;" />
                                                <Hyperlink fx:id="showLoginLink" text="Sign in"
                                                           style="-fx-text-fill: #667eea; -fx-font-weight: bold; -fx-border-color: transparent; -fx-padding: 0;" />
                                            </HBox>

                                            <Label fx:id="registerErrorLabel" style="-fx-text-fill: #e74c3c; -fx-wrap-text: true; -fx-max-width: 350; -fx-font-weight: bold; -fx-alignment: center;"
                                                   visible="false" />
                                        </children>
                                    </VBox>
                                </StackPane>
                            </children>
                        </StackPane>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </content>

    <padding>
        <Insets top="0" right="0" bottom="0" left="0"/>
    </padding>
</ScrollPane>