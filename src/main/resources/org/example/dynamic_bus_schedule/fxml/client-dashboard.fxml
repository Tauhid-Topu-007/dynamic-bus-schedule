<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dynamic_bus_schedule.controller.ClientDashboardController">
    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <children>
                <HBox alignment="CENTER_LEFT" style="-fx-padding: 15;">
                    <children>
                        <Label text="Bus Schedule System - Client Portal" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="welcomeLabel" text="Welcome, User!" style="-fx-text-fill: white; -fx-font-size: 14;" />
                        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 1; -fx-margin: 0 0 0 10;" />
                    </children>
                </HBox>

                <!-- Search Section -->
                <HBox spacing="15" style="-fx-padding: 15; -fx-background-color: #34495e;">
                    <children>
                        <Label text="Find Your Bus:" style="-fx-text-fill: white;" />
                        <TextField fx:id="searchFromField" promptText="From City" prefWidth="120" />
                        <TextField fx:id="searchToField" promptText="To City" prefWidth="120" />
                        <DatePicker fx:id="searchDateField" prefWidth="150" />
                        <Button fx:id="searchButton" text="Search Buses" onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <children>
                <Label text="Available Schedules" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <TableView fx:id="scheduleTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="routeColumn" text="Route" prefWidth="150" />
                        <TableColumn fx:id="busColumn" text="Bus" prefWidth="80" />
                        <TableColumn fx:id="departureColumn" text="Departure" prefWidth="150" />
                        <TableColumn fx:id="arrivalColumn" text="Arrival" prefWidth="150" />
                        <TableColumn fx:id="priceColumn" text="Price ($)" prefWidth="80" />
                        <TableColumn fx:id="seatsColumn" text="Available Seats" prefWidth="100" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="bookButton" text="Book Selected" onAction="#handleBook" disable="true" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 40;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>