<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dynamic_bus_schedule.controller.UserManagementController">
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #9b59b6, #8e44ad);">
            <children>
                <HBox alignment="CENTER_LEFT" style="-fx-padding: 15;">
                    <children>
                        <Label text="👥 User Management" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <VBox alignment="CENTER_RIGHT">
                            <children>
                                <Label fx:id="welcomeLabel" text="User Management" style="-fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;" />
                                <Label fx:id="userRoleLabel" text="Administrator" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Navigation Menu -->
                <HBox alignment="CENTER" spacing="30" style="-fx-padding: 10; -fx-background-color: rgba(0,0,0,0.1);">
                    <children>
                        <Button text="Dashboard" onAction="#handleBackToDashboard" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand;" />
                        <Button text="User Management" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: white; -fx-border-width: 0 0 2 0;" />
                        <Button text="Bus Management" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand;" />
                        <Button text="Schedule Management" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: white; -fx-border-color: transparent;" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
            <content>
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 30;">
                    <children>
                        <Label text="User Management" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="15">
                            <children>
                                <Button text="➕ Add User" onAction="#handleAddUser"
                                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 40;" />
                                <Button text="✏️ Edit User" onAction="#handleEditUser"
                                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 40;" />
                                <Button text="🗑️ Delete User" onAction="#handleDeleteUser"
                                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 40;" />
                                <Button text="🔄 Refresh" onAction="#handleRefresh"
                                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100; -fx-pref-height: 40;" />
                            </children>
                        </HBox>

                        <!-- Search and Filter Section -->
                        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-background-radius: 10;">
                            <children>
                                <VBox spacing="5">
                                    <Label text="Search Users" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                    <TextField fx:id="searchField" promptText="Search by name or email..."
                                               style="-fx-pref-width: 300; -fx-pref-height: 35;" />
                                </VBox>

                                <VBox spacing="5">
                                    <Label text="Filter by Role" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                    <ComboBox fx:id="roleFilter" style="-fx-pref-width: 150; -fx-pref-height: 35;" />
                                </VBox>

                                <Region HBox.hgrow="ALWAYS" />

                                <Label text="👥 8 Users Total" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14;" />
                            </children>
                        </HBox>

                        <!-- Users Table -->
                        <VBox spacing="10" style="-fx-pref-width: 900;">
                            <children>
                                <Label text="All Users" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                                <TableView fx:id="usersTable" style="-fx-pref-height: 400;">
                                    <columns>
                                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="180" />
                                        <TableColumn fx:id="emailColumn" text="Email" prefWidth="220" />
                                        <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="150" />
                                        <TableColumn fx:id="roleColumn" text="Role" prefWidth="100" />
                                        <TableColumn fx:id="dateColumn" text="Joined Date" prefWidth="120" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <!-- User Statistics -->
                        <HBox alignment="CENTER" spacing="30" style="-fx-padding: 20;">
                            <children>
                                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #e8f5e8; -fx-background-radius: 10; -fx-padding: 15; -fx-pref-width: 150;">
                                    <Label text="👑" style="-fx-font-size: 24;" />
                                    <Label text="2" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
                                    <Label text="Admins" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;" />
                                </VBox>

                                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #e8f4fd; -fx-background-radius: 10; -fx-padding: 15; -fx-pref-width: 150;">
                                    <Label text="🚌" style="-fx-font-size: 24;" />
                                    <Label text="3" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #3498db;" />
                                    <Label text="Drivers" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;" />
                                </VBox>

                                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #fef5e7; -fx-background-radius: 10; -fx-padding: 15; -fx-pref-width: 150;">
                                    <Label text="👤" style="-fx-font-size: 24;" />
                                    <Label text="3" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #f39c12;" />
                                    <Label text="Clients" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;" />
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Quick Tips -->
                        <VBox spacing="10" style="-fx-pref-width: 900; -fx-padding: 20; -fx-background-color: #fff3cd; -fx-background-radius: 10;">
                            <children>
                                <Label text="💡 Quick Tips" style="-fx-font-weight: bold; -fx-text-fill: #856404;" />
                                <Label text="• Select a user to edit or delete their account" style="-fx-text-fill: #856404; -fx-font-size: 12;" />
                                <Label text="• Use search and filters to find specific users" style="-fx-text-fill: #856404; -fx-font-size: 12;" />
                                <Label text="• Only administrators can manage user accounts" style="-fx-text-fill: #856404; -fx-font-size: 12;" />
                            </children>
                        </VBox>

                        <!-- Empty space at the bottom for better scrolling -->
                        <Region prefHeight="30" />
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 15;">
            <children>
                <Label text="© 2024 Bus Schedule System - User Management" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 35;" />
                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100; -fx-pref-height: 35;" />
            </children>
        </HBox>
    </bottom>
</BorderPane>