<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dynamic_bus_schedule.controller.ScheduleManagementController">
    <top>
        <VBox>
            <children>
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #34495e; -fx-padding: 15;">
                    <children>
                        <Button text="← Back" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 1;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Schedule Management" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
                    </children>
                </HBox>

                <!-- Search Section -->
                <HBox spacing="15" style="-fx-padding: 15;">
                    <children>
                        <Label text="Search:" />
                        <TextField fx:id="searchFromField" promptText="From" prefWidth="120" />
                        <TextField fx:id="searchToField" promptText="To" prefWidth="120" />
                        <DatePicker fx:id="searchDateField" prefWidth="150" />
                        <Button fx:id="searchButton" text="Search" onAction="#handleSearch" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Filter by Status:" />
                        <ComboBox fx:id="statusFilter" prefWidth="120" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.6">
            <items>
                <!-- Schedule Table -->
                <VBox spacing="10">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="Schedules" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                        <TableView fx:id="scheduleTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="routeColumn" text="Route" prefWidth="150" />
                                <TableColumn fx:id="busColumn" text="Bus" prefWidth="80" />
                                <TableColumn fx:id="departureColumn" text="Departure" prefWidth="150" />
                                <TableColumn fx:id="arrivalColumn" text="Arrival" prefWidth="150" />
                                <TableColumn fx:id="priceColumn" text="Price" prefWidth="80" />
                                <TableColumn fx:id="seatsColumn" text="Seats" prefWidth="80" />
                                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <!-- Schedule Form -->
                <VBox spacing="15" style="-fx-padding: 15;">
                    <children>
                        <Label text="Schedule Details" style="-fx-font-size: 16; -fx-font-weight: bold;" />

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="From *" />
                                <TextField fx:id="fromField" GridPane.columnIndex="1" />

                                <Label text="To *" GridPane.rowIndex="1" />
                                <TextField fx:id="toField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Bus *" GridPane.rowIndex="2" />
                                <ComboBox fx:id="busComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Driver *" GridPane.rowIndex="3" />
                                <ComboBox fx:id="driverComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Departure Date *" GridPane.rowIndex="4" />
                                <DatePicker fx:id="departureDateField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <Label text="Departure Time *" GridPane.rowIndex="5" />
                                <TextField fx:id="departureTimeField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                <Label text="Arrival Date *" GridPane.rowIndex="6" />
                                <DatePicker fx:id="arrivalDateField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                                <Label text="Arrival Time *" GridPane.rowIndex="7" />
                                <TextField fx:id="arrivalTimeField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                            </children>
                        </GridPane>

                        <HBox spacing="10">
                            <children>
                                <Label text="Frequency:" />
                                <ComboBox fx:id="frequencyComboBox" prefWidth="120" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label text="Price:" />
                                <TextField fx:id="priceField" prefWidth="80" />
                                <Label text="Seats:" />
                                <TextField fx:id="availableSeatsField" prefWidth="60" />
                            </children>
                        </HBox>

                        <HBox spacing="10">
                            <children>
                                <Button fx:id="addButton" text="Add Schedule" onAction="#handleAddSchedule" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                                <Button fx:id="updateStatusButton" text="Update Status" onAction="#handleUpdateStatus" disable="true" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                                <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteSchedule" disable="true" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
                                <Button fx:id="clearButton" text="Clear" onAction="#handleClearForm" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>